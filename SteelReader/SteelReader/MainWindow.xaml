<Window x:Name="MainWindow1" x:Class="SteelReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteelReader"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="800" MinHeight="600" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid x:Name="MainGrid" MinWidth="750" MinHeight="500">
        <DockPanel x:Name="MainPanel" MinWidth="750" MinHeight="500" Grid.Column="2">
            <Menu x:Name="MainMenu" MinWidth="300" MinHeight="32" VerticalAlignment="Top" Height="32" DockPanel.Dock="Top" Width="760" Background="#FFFDFFE5">
                <Button x:Name="OpenBtn" Click="OpenBtn_Click">
                    <DockPanel>
                        <Image Source="img\open-folder-with-document.png" Width="32" Height="26"/>
                    </DockPanel>
                </Button>
                <Button x:Name="EraseBtn">
                    <DockPanel>
                        <Image Source="img\delete-button.png" Width="32" Height="26"/>
                    </DockPanel>
                </Button>
                <Button x:Name="ImportToWordBtn">
                    <DockPanel>
                        <Image Source="img\microsoft-word-logo.png" Width="32" Height="26"/>
                    </DockPanel>
                </Button>
            </Menu>
            <ListBox x:Name="PdfListBox" Background="#FFB92323" MinWidth="200" MinHeight="350" Margin="35,0,0,0" VerticalContentAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Stretch">
                <ListBoxItem >
                    
                </ListBoxItem>
            </ListBox>
            <TextBox x:Name="AnnotationTextBox" TextWrapping="Wrap" Text="TextBox" Background="#FFE8CD23" MinWidth="400" MinHeight="350" Margin="35,0" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>

    </Grid>
</Window>
