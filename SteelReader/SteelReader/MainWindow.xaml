<Window x:Name="MainWindow1" x:Class="SteelReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteelReader"
        mc:Ignorable="d"
        Title="SteelReader" MinWidth="800" MinHeight="600" HorizontalAlignment="Left" VerticalAlignment="Top" Icon="communication.ico">
    <Grid x:Name="MainGrid" MinWidth="750" MinHeight="500">
        <DockPanel x:Name="MainPanel" MinWidth="750" MinHeight="500">
            <Menu x:Name="MainMenu" MinWidth="300" MinHeight="32" VerticalAlignment="Top" Height="32" DockPanel.Dock="Top" Background="#FFFDFFE5">
                <Button x:Name="OpenBtn">
                    <DockPanel>
                        <Image Source="D:\Projects\SteelReader\SteelReader\SteelReader\SteelReader\img\open-folder-with-document.png" Width="32" Height="26"/>
                    </DockPanel>
                </Button>
                <Button x:Name="EraseBtn">
                    <DockPanel>
                        <Image Source="D:\Projects\SteelReader\SteelReader\SteelReader\SteelReader\img\delete-button.png" Width="32" Height="26"/>
                    </DockPanel>
                </Button>
                <Button x:Name="ImportToWordBtn">
                    <DockPanel>
                        <Image Source="D:\Projects\SteelReader\SteelReader\SteelReader\SteelReader\img\microsoft-word-logo.png" Width="32" Height="26"/>
                    </DockPanel>
                </Button>
            </Menu>
            <ProgressBar Height="16" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" MinWidth="300" MinHeight="16" MaxWidth="800" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ListBox x:Name="PdfListBox" Background="#FFB92323" MinWidth="200" MinHeight="350" Margin="35,50" VerticalContentAlignment="Top">
                <ListBoxItem>
                    <ListBoxItem Background="LightCoral" Foreground="Red"

             FontFamily="Verdana" FontSize="12" FontWeight="Bold">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Coffie"></TextBlock>
                            <Image Source="img/microsoft-word-logo.png" Height="30"></Image>
                        </StackPanel>

                    </ListBoxItem>
                </ListBoxItem>
            </ListBox>
            <TextBox x:Name="AnnotationTextBox" TextWrapping="Wrap" Background="#FFE8CD23" MinWidth="400" MinHeight="350" Margin="35,50" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>

    </Grid>
</Window>
